<h1>閲覧</h1>
  <p>物件名: <%= @apart.name %></p>
  <p>賃料: <%= @apart.rent %></p>
  <p>住所: <%= @apart.address %></p>
  <p>築年数: <%= @apart.age %></p>
  <p>備考: <%= @apart.note %></p>
  <hr></hr>
  <% i=1 %>
  <% @apart.stations.each do |station| %>
    <h4><%= "最寄駅#{i}" %></h4>
    <p>路線名: <%= station.line %></p>
    <p>駅名: <%= station.name %></p>
    <p>徒歩分数: <%= station.foot %></p>
    <% i += 1 %>
  <% end %>
